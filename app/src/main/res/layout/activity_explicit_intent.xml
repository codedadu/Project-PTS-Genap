<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".intentexplicit.ExplicitIntentActivity">

    <LinearLayout
        android:id="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <Button
            android:textColor="#ffff"
            android:backgroundTint="#FF9800"
            android:onClick="gotoOtherActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Go To other Activity"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_below="@id/layout_1"
        android:id="@+id/layout_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Intent Explicit Put Extra"
            android:gravity="center"
            android:textSize="12pt"/>

        <EditText
            android:layout_marginTop="18dp"
            android:hint="Put Your Message"
            android:id="@+id/edt_singleMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" />

        <Button
            android:onClick="act_SendPutExtra"
            android:textColor="#ffff"
            android:backgroundTint="#673AB7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Message to Other Activity"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_below="@id/layout_2"
        android:id="@+id/layout_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Intent Explicit Put Extra's"
            android:gravity="center"
            android:textSize="12pt"/>

        <EditText
            android:layout_marginTop="18dp"
            android:hint="Put Type is String"
            android:id="@+id/edt_put1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" />

        <EditText
            android:hint="Put Type is Integer"
            android:id="@+id/edt_put2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" />

        <EditText
            android:hint="Put Type is Float"
            android:id="@+id/edt_put3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" />

        <EditText
            android:hint="Put Type is Double"
            android:id="@+id/edt_put4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" />

        <Button
            android:onClick="act_SendPutExtras"
            android:textColor="#ffff"
            android:backgroundTint="#009688"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Message to Other Activity"/>

    </LinearLayout>

    <Button
        android:onClick="backtoList"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/borderlessButtonStyle"
        android:text="Back to List"/>

</RelativeLayout>